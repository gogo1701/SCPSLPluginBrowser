@{
    ViewData["Title"] = "Add Admin";
}

<h2>Add Admin</h2>

<div class="card">
    <div class="card-header">
        <h3>Promote User to Admin</h3>
    </div>
    <div class="card-body">
        <form asp-action="AddAdmin" asp-controller="DllFile" method="post">
            <div class="form-group">
                <label for="userId">User ID</label>
                <input type="text" id="userId" name="userId" class="form-control" placeholder="Enter User ID" required />
            </div>
            <button type="submit" class="btn btn-success">Promote</button>
        </form>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Username</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model)
            {
                <tr>
                    <td>@admin.Id</td>
                    <td>@admin.UserName</td>
                    <td>
                        <form asp-action="RemoveAdmin" asp-controller="DllFile" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@admin.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove Admin</button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Message</div>
}


